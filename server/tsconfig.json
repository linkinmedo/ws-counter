{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "types": ["bun-types"]
  },
  "exclude": ["dist", "node_modules"]
}
